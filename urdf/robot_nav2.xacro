<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_nav2_xacro">
 <xacro:include filename="$(find rob_nav2)/urdf/robot_nav2.gazebo"/>
 <xacro:include filename="$(find rob_nav2)/urdf/materials.xacro" />

  <!-- Inertia definition (cylinder, wheel + chassis) -->
  <xacro:macro name="cylinder_inertia" params="mass r l"> 
    <inertia ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0" izz="${mass*(r*r)/2}" /> 
  </xacro:macro>

	<xacro:macro name="default_inertial" params="mass">
      <inertial>
        <mass value="${mass}" />
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
      </inertial>
	</xacro:macro>

  <!-- Wheel defnition -->
  <xacro:property name="length_wheel" value="0.04" />
	<xacro:property name="radius_wheel" value="0.1" />
  <xacro:property name="mass_wheel" value="0.2" />

  <!-- geometry-->
  <xacro:macro name="wheel_geometry">
		<geometry>
       			<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
     	</geometry>
	</xacro:macro>

  <!-- link -->
  <xacro:macro name="link_wheel" params="name">
    <link name="${name}">
        <xacro:default_inertial mass="${mass_wheel}"/>
        <collision name="${name}_collision">
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <xacro:wheel_geometry />
        </collision>
        <visual name="${name}_visual">
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <xacro:wheel_geometry />
          <material name="red"/>
        </visual>
    </link>
  </xacro:macro>

  <!-- joint -->
  <xacro:macro name="joint_wheel" params="name child origin_xyz">
    <joint name="${name}" type="continuous">
      <origin rpy="0 0 0" xyz="${origin_xyz}"/>
      <child link="${child}"/>
      <parent link="link_chassis"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <joint_properties damping="1.0" friction="1.0"/>
    </joint>
  </xacro:macro>

  <!-- Chassis definition -->
  <link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    <!-- body -->
    <collision name="collision_chassis">
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <!-- caster front -->
    <collision name="caster_front_collision">
      <origin rpy=" 0 0 0" xyz="0.35 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <!-- Wheel Creation -->
  <xacro:link_wheel name="link_right_wheel" />
  <xacro:link_wheel name="link_left_wheel" />
  <xacro:joint_wheel name="joint_right_wheel"  child="link_right_wheel"  origin_xyz="-0.05 0.15 0"  />
  <xacro:joint_wheel name="joint_left_wheel"   child="link_left_wheel"   origin_xyz="-0.05 -0.15 0"  />

  <!-- Camera -->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0"/>
    <origin xyz="0.23 0 0.0 " rpy="0 0 0"/>
    <parent link="link_chassis"/>
    <child link="camera_link"/>
  </joint>
</robot>